        <activity
            android:name=".CategorisationActivities.HealthActivity"
            android:label="Health" />
        <activity
            android:name=".CategorisationActivities.FashionActivity"
            android:label="Fashion" />
        <activity
            android:name=".CategorisationActivities.FinanceActivity"
            android:label="Finance" />
        <activity
            android:name=".CategorisationActivities.TelecomActivity"
            android:label="Telecom" />
